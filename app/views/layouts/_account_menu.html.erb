<div class="intro-x dropdown w-8 h-8">
  <div class="dropdown-toggle text-center" role="button" aria-expanded="false" data-tw-toggle="dropdown">
    <%= icon('fas', 'globe-europe') %>
  </div>
  <div class="dropdown-menu w-56">
    <ul class="dropdown-content bg-primary text-white">
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="languageDropdown">
      </div>
      <li class="p-2">
        <%= link_to 'Deutsch', { locale: 'de' }, class: 'font-medium' %>
      </li>
      <li class="p-2">
        <%= link_to 'English', { locale: 'en' }, class: 'font-medium' %>
      </li>
    </ul>
  </div>
</div>

<div class="intro-x dropdown w-8 h-8">
  <div class="dropdown-toggle text-center" role="button" aria-expanded="false" data-tw-toggle="dropdown">
    <%= icon('fa', 'user') %>
  </div>
  <div class="dropdown-menu w-56">
    <ul class="dropdown-content bg-primary text-white">
      <li class="p-2"><div class="font-medium"><%= current_user.email %></div></li>
      <li><hr class="dropdown-divider border-white/[0.08]" /></li>

      <li><%= link_to t('users.profile'), current_user, class: 'dropdown-item hover:bg-white/5' %></li>
      <li><hr class="dropdown-divider border-white/[0.08]" /></li>

      <li><%= link_to t('users.show_login_qr_code'), new_mobile_app_connection_path, class: 'dropdown-item hover:bg-white/5', data: { turbo_stream: true } %></li>
      <li><hr class="dropdown-divider border-white/[0.08]" /></li>

      <li><%= button_to t('devise.logout'), destroy_user_session_path, method: :delete, class: 'dropdown-item hover:bg-white/5' %></li>
    </ul>
  </div>
</div>

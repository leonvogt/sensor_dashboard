<%= turbo_frame_tag 'last-sensor-measurements' do %>
  <div class="2xl:border-l -mb-10 pb-10">
    <div class="2xl:pl-6 grid grid-cols-12 gap-x-6 2xl:gap-x-0 gap-y-6">
      <div class="col-span-12 md:col-span-6 xl:col-span-4 2xl:col-span-12">
        <div class="intro-x flex items-center h-10">
          <h2 class="text-lg font-medium truncate mr-5"><%= t('dashboard.last_sensor_measurements', count: 5) %></h2>
        </div>
        <div class="mt-5">
          <% @sensor_measurements.each do |data| %>
            <div class="intro-x">
              <%= link_to device_path(data.sensor&.device, sensor_to_show: data.sensor.id), data: { turbo_frame: '_top' } do %>
                <div class="box px-5 py-3 mb-3 flex items-center zoom-in">
                  <div class="ml-4 mr-auto">
                    <div class="font-medium"><%= data.sensor.to_s %></div>
                    <div class="text-slate-500 text-xs mt-0.5"><%= data.sensor.device&.to_s %></div>
                  </div>
                  <div class="text-right">
                    <div class="text-success"><%= data.to_s %></div>
                    <div class="text-slate-500 text-xs mt-0.5"><%= time_ago_in_words(data.created_at) %></div>
                  </div>
                </div>
              <% end %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
<% end %>

<div class="intro-y col-span-12 md:col-span-4">
  <%= link_to "Show QR Code", new_mobile_app_connection_path, data: { turbo_stream: true } %>

  <% @mobile_app_connections.each do |mobile_app| %>
    <div class="box">
      <div class="flex flex-col lg:flex-row items-center p-5 border-b border-slate-200/60 dark:border-darkmode-400">
        <div class="w-24 mr-1">
          <%= icon('fa-brands', 'android') %>
        </div>
        <div class="lg:ml-2 lg:mr-auto text-center lg:text-left mt-3 lg:mt-0">
          <a href="" class="font-medium"><%= mobile_app.to_s %></a>
        </div>
        <div class="flex justify-end">
          <a href="" class="w-8 h-8 flex items-center justify-center">
            <%= icon('fa-solid', 'bell') %>
          </a>
        </div>
      </div>
      <div class="flex flex-wrap lg:flex-nowrap items-center justify-end p-5">
        <%= link_to mobile_app, data: { turbo: true, turbo_method: :delete, turbo_confirm: t('confirm_delete') }, class: 'btn btn-outline-secondary text-danger py-1 px-2' do %>
          <%= t('delete') %>
        <% end %>
      </div>
    </div>
  <% end %>
</div>

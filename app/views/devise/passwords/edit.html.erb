<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| %>
  <%= f.hidden_field :reset_password_token %>
  <div class="flex justify-center container mx-auto my-auto w-screen h-screen items-center flex-col">
    <div class="w-full md:w-3/4  lg:w-1/2 flex flex-col items-center bg-slate-50 rounded-md p-10">
      <div class="items-center">
        <svg class="w-10 h-10 mx-auto pb-3" fill="none" stroke="currentColor" viewBox="0 0 24 24" xmlns="http://www.w3.org/2000/svg"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path></svg>
        <div class="text-center pb-3"><%= t('.change_your_password') %></div>
      </div>

      <div class="w-3/4 mb-6">
        <%= f.password_field :password, autofocus: true, class: 'w-full py-4 px-8 bg-slate-200 placeholder:font-semibold rounded hover:ring-1 hover:ring-gray-600 outline-slate-500  border-solid border-2 border-slate-300', placeholder: t('.new_password') %>
      </div>

      <div class="w-3/4 mb-6">
        <%= f.password_field :password_confirmation, autofocus: true, class: 'w-full py-4 px-8 bg-slate-200 placeholder:font-semibold rounded hover:ring-1 hover:ring-gray-600 outline-slate-500  border-solid border-2 border-slate-300', placeholder: t('.new_password') %>
      </div>

      <div class="w-3/4 mb-12">
        <%= f.submit t('.change_my_password'), class: 'btn btn-primary w-full' %>
      </div>

      <div class="mt-6 text-sm">
        <div class="flex flex-col gap-2 items-center">
          <%= link_to t('back'), new_session_path(resource_name) %><br />
        </div>
      </div>
    </div>
  </div>
<% end %>

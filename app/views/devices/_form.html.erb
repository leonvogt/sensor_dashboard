<div class="col-span-12">
  <div class="intro-y box p-5">
    <%= form_with(model: device, local: true) do |form| %>
      <%= render partial: 'layouts/error_messages', locals: { resource: device } if device.errors.any? %>

      <%= form.label :name %>
      <%= form.text_field :name, class: 'form-control' %>

      <div class="mt-3">
        <%= form.label :description %>
        <%= form.text_area :description, class: 'form-control' %>
      </div>

      <div class="text-right mt-5">
        <%= link_to t('cancel'), device, class: 'btn btn-outline-secondary mr-1' %>
        <%= form.submit t('save'), class: 'btn btn-success' %>
      </div>
    <% end %>
  </div>
</div>
